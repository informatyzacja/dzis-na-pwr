{
  "name": "events-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/web",
    "packages/db"
  ],
  "scripts": {
    "build": "turbo build",
    "clean": "rm -rf node_modules",
    "clean:workspaces": "turbo clean",
    "db:generate": "turbo db:generate",
    "db:push": "turbo db:push db:generate",
    "dev": "turbo dev --parallel",
    "dev:docker": "docker compose -f docker-compose.dev.yml up --force-recreate -V",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
    "format:check": "prettier --ignore-unknown --check",
    "prepare": "husky install",
    "lint": "turbo lint && manypkg check",
    "lint:fix": "turbo lint:fix && manypkg fix",
    "type-check": "turbo type-check"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/informatyzacja/events-app.git"
  },
  "author": {
    "name": "Michał Korczak",
    "url": "https://omikor.in"
  },
  "maintainers": [
    {
      "name": "Michał Korczak",
      "url": "https://omikor.in"
    },
    {
      "name": "Damian Raczkowski"
    },
    {
      "name": "Bartosz Gotowski"
    }
  ],
  "bugs": {
    "url": "https://github.com/informatyzacja/events-app/issues"
  },
  "homepage": "https://github.com/informatyzacja/events-app#readme",
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.7.1",
    "@manypkg/cli": "^0.20.0",
    "@types/node": "^18.14.1",
    "@types/prettier": "^2.7.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-config-next": "^13.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "prisma": "^4.10.1",
    "turbo": "^1.8.2",
    "typescript": "^4.9.5"
  },
  "ct3aMetadata": {
    "initVersion": "7.5.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ],
    "*": "prettier --write --ignore-unknown"
  }
}
