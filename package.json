{
  "name": "events-app",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "dotenv -- turbo build",
    "build:android": "dotenv -- turbo build:android",
    "clean": "rm -rf node_modules",
    "clean:workspaces": "turbo clean",
    "db:generate": "turbo db:generate",
    "db:push": "dotenv -- turbo db:push db:generate",
    "db:migrate": "dotenv -- npm run migrate",
    "migrate": "cd packages/db && npm run db:migrate",
    "db:seed": "dotenv -- turbo db:seed",
    "db:studio": "dotenv -- turbo db:studio",
    "start": "dotenv -- turbo start",
    "dev": "dotenv -- turbo dev --parallel --filter=!expo",
    "dev:mobile": "cd apps/expo && npm run dev",
    "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,md,json}\" --ignore-path .gitignore",
    "format:check": "prettier --ignore-unknown --check",
    "prepare": "npx husky install && npm run db:generate",
    "lint": "dotenv -- turbo lint",
    "lint:fix": "dotenv -- turbo lint:fix",
    "type-check": "turbo type-check"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/informatyzacja/events-app.git"
  },
  "author": {
    "name": "Michał Korczak",
    "url": "https://omikor.in"
  },
  "maintainers": [
    {
      "name": "Michał Korczak",
      "url": "https://omikor.in"
    },
    {
      "name": "Damian Raczkowski"
    },
    {
      "name": "Bartosz Gotowski"
    }
  ],
  "bugs": {
    "url": "https://github.com/informatyzacja/events-app/issues"
  },
  "homepage": "https://github.com/informatyzacja/events-app#readme",
  "dependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^3.7.1",
    "@types/node": "^18.14.1",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "dotenv-cli": "^7.0.0",
    "eslint": "^8.34.0",
    "eslint-config-next": "^13.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "turbo": "^1.9.4",
    "typescript": "^4.9.5"
  },
  "ct3aMetadata": {
    "initVersion": "7.5.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ],
    "*": "prettier --write --ignore-unknown"
  }
}
